---
import { getLangFromUrl, useTranslations } from "../i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentPath = Astro.url.pathname;

// Build navigation items with proper language paths
const navItems = [
  { href: lang === 'en' ? '/' : `/${lang}`, label: t("nav.home") },
  { href: lang === 'en' ? '/features' : `/${lang}/features`, label: t("nav.features") },
  { href: lang === 'en' ? '/pricing' : `/${lang}/pricing`, label: t("nav.pricing") },
  { href: '/docs', label: 'Documentation' },
];

// Language switcher links - preserve the current path structure
const getLocalizedPath = (targetLang: string) => {
  // Remove /fr prefix if present
  const pathWithoutLang = currentPath.replace(/^\/fr/, "") || "/";
  
  // If switching to English, no prefix needed
  if (targetLang === 'en') {
    return pathWithoutLang;
  }
  
  // If switching to French, add /fr prefix
  return `/fr${pathWithoutLang}`;
};
---

<nav class="nav">
  <div class="container">
    <div class="nav__content">
      <a href={lang === 'en' ? '/' : `/${lang}`} class="nav__logo">{t("site.title")}</a>
      
      <button class="nav__toggle" aria-label="Toggle navigation" aria-expanded="false">
        <span class="nav__toggle-icon"></span>
        <span class="nav__toggle-icon"></span>
        <span class="nav__toggle-icon"></span>
      </button>

      <div class="nav__right">
        <ul class="nav__menu">
          {
            navItems.map((item) => (
              <li class="nav__item">
                <a
                  href={item.href}
                  class={`nav__link ${currentPath === item.href ? "nav__link--active" : ""}`}
                >
                  {item.label}
                </a>
              </li>
            ))
          }
        </ul>
        <div class="nav__language">
          <select
            class="language-picker"
            onchange="window.location.href = this.value"
          >
            <option value={getLocalizedPath("en")} selected={lang === "en"}
              >ðŸ‡¬ðŸ‡§ EN</option
            >
            <option value={getLocalizedPath("fr")} selected={lang === "fr"}
              >ðŸ‡«ðŸ‡· FR</option
            >
          </select>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  const toggleButton = document.querySelector('.nav__toggle');
  const navRight = document.querySelector('.nav__right');
  
  toggleButton?.addEventListener('click', () => {
    const isExpanded = toggleButton.getAttribute('aria-expanded') === 'true';
    toggleButton.setAttribute('aria-expanded', (!isExpanded).toString());
    toggleButton.classList.toggle('nav__toggle--active');
    navRight?.classList.toggle('nav__right--open');
  });

  // Close menu when clicking outside
  document.addEventListener('click', (e) => {
    if (!toggleButton?.contains(e.target as Node) && !navRight?.contains(e.target as Node)) {
      toggleButton?.classList.remove('nav__toggle--active');
      navRight?.classList.remove('nav__right--open');
      toggleButton?.setAttribute('aria-expanded', 'false');
    }
  });
</script>

<style>
  .nav {
    background-color: var(--bg-white);
    border-bottom: 1px solid var(--border-light);
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .nav__content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem 0;
    position: relative;
  }

  .nav__right {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  .nav__logo {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--brand);
    text-decoration: none;
  }

  .nav__toggle {
    display: none;
    flex-direction: column;
    gap: 4px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    z-index: 101;
  }

  .nav__toggle-icon {
    width: 24px;
    height: 2px;
    background-color: var(--text-secondary);
    transition: all 0.3s ease;
  }

  .nav__toggle--active .nav__toggle-icon:nth-child(1) {
    transform: rotate(45deg) translate(6px, 6px);
  }

  .nav__toggle--active .nav__toggle-icon:nth-child(2) {
    opacity: 0;
  }

  .nav__toggle--active .nav__toggle-icon:nth-child(3) {
    transform: rotate(-45deg) translate(6px, -6px);
  }

  .nav__menu {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 2rem;
  }

  .nav__item {
    margin: 0;
  }

  .nav__link {
    color: var(--text-secondary);
    text-decoration: none;
    font-weight: 400;
    transition: color 0.2s ease;
  }

  .nav__link:hover,
  .nav__link--active {
    color: var(--brand);
  }

  .language-picker {
    background-color: var(--bg-white);
    border: 1px solid var(--border-light);
    border-radius: 4px;
    padding: 0.25rem 0.5rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
    cursor: pointer;
    min-width: 80px;
    font-weight: 500;
    font-family:
      -apple-system, BlinkMacSystemFont, "Segoe UI", "Segoe UI Emoji",
      "Apple Color Emoji", "Noto Color Emoji", sans-serif;
  }

  .language-picker:hover {
    border-color: var(--brand);
  }

  .language-picker:focus {
    outline: none;
    border-color: var(--brand);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .nav__toggle {
      display: flex;
    }

    .nav__right {
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      flex-direction: column;
      background-color: var(--bg-white);
      border-bottom: 1px solid var(--border-light);
      padding: 1rem 1.5rem;
      gap: 1rem;
      max-height: 0;
      overflow: hidden;
      opacity: 0;
      transition: max-height 0.3s ease, opacity 0.3s ease, padding 0.3s ease;
    }

    .nav__right--open {
      max-height: 400px;
      opacity: 1;
      padding: 1rem 1.5rem;
    }

    .nav__menu {
      flex-direction: column;
      gap: 1rem;
      width: 100%;
    }

    .nav__item {
      width: 100%;
    }

    .nav__link {
      display: block;
      padding: 0.5rem 0;
    }

    .nav__language {
      width: 100%;
    }

    .language-picker {
      width: 100%;
    }
  }

  @media (max-width: 480px) {
    .nav__logo {
      font-size: 1.125rem;
    }

    .language-picker {
      font-size: 0.8rem;
    }
  }
</style>
